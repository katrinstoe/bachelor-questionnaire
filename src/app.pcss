/*place global styles here */
html, body {
    @apply h-full overflow-hidden;
    @apply bg-slate-900;
    @apply text-lg
}

h1 {
    @apply text-4xl
}

h2 {
    @apply text-3xl
}


input[type='number']::-webkit-outer-spin-button,
input[type='number']::-webkit-inner-spin-button,
input[type='number'] {
    -webkit-appearance: none;
    margin: 0;
    -moz-appearance: textfield !important;
}
